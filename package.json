{
  "name": "remix-spa-hono-vite-cloudflare",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "dev": "bun run dev:server bun run dev:client",
    "dev:client": "source .env.dev && remix vite:dev --port $CLIENT_PORT",
    "dev:server": "source .env.dev && wrangler pages dev  --local --compatibility-flags='nodejs_compat' --compatibility-date=2024-02-19 --port $SERVER_PORT --",
    "down": "source .env.dev && bunx kill-port $CLIENT_PORT $SERVER_PORT",
    "deploy": "bun run build && wrangler pages deploy build/client",
    "build": "remix vite:build",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "preview": "vite preview",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@hono/swagger-ui": "^0.2.1",
    "@hono/vite-cloudflare-pages": "^0.2.5",
    "@hono/zod-openapi": "^0.9.6",
    "@planetscale/database": "1.6.0",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-menubar": "^1.0.4",
    "@radix-ui/react-scroll-area": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slot": "^1.0.2",
    "@remix-run/node": "2.6.0",
    "@remix-run/react": "2.6.0",
    "@ts-rest/core": "^3.33.0",
    "@ts-rest/open-api": "^3.33.0",
    "autoprefixer": "^10.4.17",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "conform": "^0.2.16",
    "drizzle-kit": "^0.20.14",
    "drizzle-orm": "^0.29.3",
    "drizzle-zod": "^0.5.1",
    "hono": "^4.0.5",
    "lucide-react": "^0.336.0",
    "postcss": "latest",
    "react": "18.3.0-canary-388686f29-20230503",
    "react-dom": "18.3.0-canary-388686f29-20230503",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "latest",
    "tailwindcss-animate": "^1.0.7",
    "ts-rest-hono": "^0.5.0",
    "wrangler": "3.3.0",
    "zod-openapi": "^2.13.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.5.3",
    "@hono/vite-dev-server": "^0.8.0",
    "@originjs/vite-plugin-commonjs": "^1.0.3",
    "@remix-run/dev": "^2.7.1",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-plugin-cjs-interop": "^2.0.6",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
